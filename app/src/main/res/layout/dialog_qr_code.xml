<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/normal_padding"
    android:background="@drawable/bg_unable_radius_8"
    android:orientation="vertical"
    android:paddingBottom="56dp">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end"
        android:padding="@dimen/normal_padding"
        android:src="@drawable/ico_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/normal_padding">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_circle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    tools:background="@drawable/bg_circle_1_orange" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/tv_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/text_strong"
                    android:textSize="24sp"
                    tools:text="1" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="start"
                    android:textColor="@color/black_7"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="start"
                    android:paddingEnd="@dimen/normal_padding"
                    android:textColor="@color/text_weak"
                    android:textSize="14sp"
                    tools:text="ARAbwCasdfigsdfhasdojf83NncT" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/qr_cod_tips"
            android:textColor="@color/text_weak"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="176dp"
            android:layout_height="176dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            android:src="@drawable/ico_qr_code" />
    </LinearLayout>
</FrameLayout>